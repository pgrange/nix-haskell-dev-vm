{
  "variables": {
    "gcp_account_file": "",
    "gcp_project_id": ""
  },
  "builders": [
    {
      "type": "googlecompute",
      "source_image": "ubuntu-minimal-2110-impish-v20211014",
      "account_file": "{{user `gcp_account_file`}}",
      "project_id": "{{user `gcp_project_id`}}",
      "ssh_username": "curry",
      "image_family": "iog-hydra",
      "image_name": "iog-hydra-{{timestamp}}",
      "zone": "europe-west4-a"
    },
    {
      "type": "amazon-ebs",
      "source_ami_filter": {
        "filters": {
          "virtualization-type": "hvm",
          "name": "ubuntu/images/hvm-ssd/ubuntu-focal-*",
          "root-device-type": "ebs"
        },
        "owners": ["099720109477"],
        "most_recent": true
      },
      "instance_type": "t2.small",
      "ssh_username": "ubuntu",
      "ami_name": "iog-hydra {{isotime | clean_resource_name}}",
      "tags": {
        "automation": "packer"
      },
      "profile": "{{user `aws_profile`}}"
    }
  ],
  "provisioners": [{
    "type": "shell",
    "inline": [
      "sleep 30"
    ]
  }, {
    "type": "shell",
    "script": "build-env.sh"
  }]
}
